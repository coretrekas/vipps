{
    "name": "coretrekas/vipps",
    "description": "PHP SDK for Vipps MobilePay Checkout and Recurring APIs",
    "type": "library",
    "keywords": ["coretrek", "vipps", "mobilepay", "payment", "checkout", "recurring", "subscription", "sdk"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tommy Leirvik",
            "email": "tommyl@coretrek.no"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.8",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0|^2.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.13",
        "symfony/var-dumper": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Coretrek\\Vipps\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Coretrek\\Vipps\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "pint": "pint",
        "pint:test": "pint --test"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

