{
    "preset": "psr12",
    "exclude": [
        "vendor"
    ],
    "rules": {
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true,
        "array_syntax": {
            "syntax": "short"
        },
        "concat_space": {
            "spacing": "one"
        },
        "declare_strict_types": true,
        "single_quote": true
    }
}